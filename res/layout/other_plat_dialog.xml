<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:padding="20dp"
    android:background="@color/page_back"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
    
     <TextView
        android:layout_marginRight="10dp"
        android:drawablePadding="10dp"
        android:textColor="@color/logo_text_color"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/logo_qzone"
        android:id="@+id/tvqzone"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/qzone" />

    <TextView
       
        android:drawablePadding="10dp"
        android:textColor="@color/logo_text_color"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/logo_sinaweibo"
        android:id="@+id/tvsinaweibo"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sinaweibo" />
    
    <TextView
     
        android:drawablePadding="10dp"
        android:textColor="@color/logo_text_color"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/logo_renren"
        android:id="@+id/tvrenren"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/renren" />

    <TextView
    
         android:padding="10dp"
        android:drawablePadding="10dp"
        android:textColor="@color/logo_text_color"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/logo_facebook"
        android:id="@+id/tvfacebook"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/facebook" />
    

</LinearLayout>
