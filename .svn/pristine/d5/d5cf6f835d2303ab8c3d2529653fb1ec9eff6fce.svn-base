<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="15.0dip"
        android:hint="blog_Title"
        android:textSize="23.0sp" />

    <TextView
        android:id="@+id/blogUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogTitle"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:hint="blog_UpdateTime"
        android:textSize="15.0sp" />

    <TextView
        android:id="@+id/blogPartText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogUpdate"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:hint="blog_PartText"
        android:textSize="20.0sp" />

</RelativeLayout>