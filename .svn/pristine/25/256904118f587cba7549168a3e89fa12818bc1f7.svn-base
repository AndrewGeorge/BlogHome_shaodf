<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/userimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center"
        android:layout_marginTop="100dip"
        android:background="@drawable/man_64"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户名:"
            android:textColor="@color/list_item_other"
            android:textSize="25dip" />

        <EditText
            android:id="@+id/username"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密     码:"
            android:textColor="@color/list_item_other"
            android:textSize="25dip" />

        <EditText
            android:id="@+id/password"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:password="true"
            android:textSize="15dip" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:text="是否记住密码" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:textColor="@color/list_item_other" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="取消"
            android:textColor="@color/list_item_other" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="温馨提示：取消登陆将不能发表评论和有关内容的修改，可浏览新闻和博客."
        android:textColor="@color/bloger_panel_bg" />
    <ImageView 
        android:id="@+id/loginImage"
        android:layout_width="wrap_content"
         android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/icon_loading_selected"
        />

</LinearLayout>